{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react",
      "lib": ["es7", "dom" ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "outDir": "ts-build",
      "rootDir": "src",
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es5",
      "types": [
        "node"
      ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts*",
      "src/setupTests.ts"
    ],
    "typeRoots": [
       "node_modules/@types"
    ]
  }