{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es5",
      "lib": [ "es2015", "es6", "es7", "dom" ],
      "jsx": "react",
      "outDir": "lib",
      "allowSyntheticDefaultImports": true,
      "suppressImplicitAnyIndexErrors": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "src",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "declaration": true
    },
    "files": [
      "./src/index.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
  }